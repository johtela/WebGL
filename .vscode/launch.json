    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "outFiles": [
                "${workspaceRoot}/js/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/js/Test*.js"],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/js/*.js"
            ]
        }       
    ]
}